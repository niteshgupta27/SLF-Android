<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBackground">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textview_style_heading"
                android:text="@string/storage_yard_details"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_storage_name"
                style="@style/mEditText"
                android:background="@drawable/background_edit_square"
                android:hint="Storage Facility Business Name*" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_contact_person"
                style="@style/mEditText"
                android:background="@drawable/background_edit_square"
                android:hint="Storage Facility Manager Name" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_contact_number"
                android:maxLength="15"
                android:background="@drawable/background_edit_square"
                android:hint="Telephone Number*"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                android:inputType="phone"
                android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorGray"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_address"
                style="@style/mEditText"
                android:background="@drawable/background_edit_square"
                android:hint="Address"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_city"
                style="@style/mEditText"
                android:background="@drawable/background_edit_square"
                android:hint="city/Postcode*"/>



                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_message"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_edit_square"
                    android:gravity="top|left"
                    android:hint="Message"
                    android:inputType="textMultiLine"
                    android:maxLength="250"
                    android:padding="10dp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorGray"
                    android:textSize="12sp" />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



    <RelativeLayout
        android:id="@+id/rl_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:background="@drawable/background_square_btn"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_submit"
            style="@style/textview_style_title"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Submit"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/txt_submit"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/colorWhite" />


    </RelativeLayout>




</RelativeLayout>