<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBackground"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textview_style_title"
                android:text="Contact Us"
                android:textColor="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/rl_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_edit_square"
                android:padding="7dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select your Reason"
                    android:inputType="text"
                    android:layout_centerInParent="true"
                    android:gravity="center|left"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorGray"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_subject"
                style="@style/mEditText"
                android:background="@drawable/background_edit_square"
                android:hint="Subject" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_msg"
                style="@style/mEditText"
                android:layout_height="180dp"
                android:background="@drawable/background_edit_square"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:hint="Message" />


            <LinearLayout
                android:id="@+id/ll_add_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_attach"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_solid_circle_dark"
                    android:padding="5dp"
                    android:src="@drawable/ic_attachment_black_24dp"
                    android:tint="@color/colorWhite" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_attachment"
                    style="@style/textview_style_medium"
                    android:layout_marginLeft="10dp"
                    android:text="Add attachment"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_rounded_btn"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Submit"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>