<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBackground"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_chat_log_flog">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rl_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:id="@+id/fl_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_place_holder"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:adjustViewBounds="true"
                        android:src="@drawable/place_holder"/>

                    <LinearLayout
                        android:id="@+id/ll_dots"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="65dp"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginTop="170dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_google"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_circle"
                            android:padding="10dp"
                            android:src="@drawable/search_google"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_contact_us"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/bg_solid_circle2"
                            android:padding="10dp"
                            android:src="@drawable/envelope"
                            android:tint="@color/colorWhite" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_call"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_solid_circle"
                            android:padding="10dp"
                            android:src="@drawable/ic_call_black_24dp"
                            android:tint="@color/colorWhite" />


                    </LinearLayout>

                </FrameLayout>



            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_banner"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_title"
                        style="@style/textview_style_title"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_address_line1"
                        style="@style/textview_style_medium"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/colorWhite" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_address_line2"
                        style="@style/textview_style_medium"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/colorWhite" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_description"
                        style="@style/textview_style_medium"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textColor="@color/colorWhite" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_storage_unit"
                    style="@style/textview_style_title"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorLightBackground"
                    android:gravity="left"
                    android:padding="10dp"
                    android:text="Storage Unit"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_storage_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_middle"
                android:layout_marginTop="10dp" />




        </RelativeLayout>



    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_chat_log_flog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="start"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp">



        <RelativeLayout
            android:id="@+id/img_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_sheft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/card_img"
                android:tint="@color/colorWhite" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/img_sheft"
                android:layout_marginStart="5dp"
                android:text="Shelves"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:textSize="10sp"

                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/img_log"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/colorPrimary">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_Item"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/menu_log"
                android:tint="@color/colorWhite"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/img_Item"
                android:layout_marginStart="5dp"
                android:text="Item"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:textSize="10sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/img_chat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_contact"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_insert_comment_black_24dp"
                android:tint="@color/colorWhite"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/img_contact"
                android:layout_marginStart="5dp"
                android:text="Contact"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/delete_relative"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_30sdp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/trash_icon"
                android:tint="@color/colorPrimary"
                android:layout_centerVertical="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/img_delete"
                android:layout_marginStart="5dp"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="start|center"
                android:layout_gravity="center"
                android:textSize="10sp" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>